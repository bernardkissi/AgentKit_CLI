{
  "name": "agentkit",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "check": "pnpm lint && pnpm -r build && pnpm -r test",
    "validate:fixtures": "pnpm --filter @agentkit/cli test",
    "dev": "pnpm --filter @agentkit/cli dev",
    "deps:update": "pnpm -r up --latest",
    "deps:audit": "pnpm audit",
    "deps:check": "pnpm audit --audit-level=high"
  },
  "devDependencies": {
    "@agentkit/plugin-gmail": "workspace:*",
    "@changesets/cli": "^2.29.8",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1"
  }
}
